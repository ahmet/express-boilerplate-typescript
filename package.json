  "type": "module",
  "scripts": {
    "postinstall": "husky",
    "build": "rimraf ./dist && tsc && tsc-alias",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "test": "NODE_ENV=test jest --coverage --forceExit --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --watchAll --coverage",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(js|ts|json)\"",
    "format:fix": "prettier --ignore-path .gitignore --write \"src/**/*.+(js|ts|json)\"",
    "clean": "rimraf ./dist ./coverage"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "envalid": "^8.0.0",
    "express": "^4.18.2",
    "express-timeout-handler": "^2.2.2",
    "helmet": "^7.1.0",
    "joi": "^17.12.2",
    "response-time": "^2.3.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/response-time": "^2.3.8",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^7.0.2"
  },
  "lint-staged": {
    "src/**/*.{ts,js,json}": "yarn lint:fix"
  },
  "engines": {
    "node": ">=20.6.0"
  }
